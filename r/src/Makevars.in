# 							-*- mode: makefile -*-
# set by configure
GSL_CFLAGS = @GSL_CFLAGS@
GSL_LIBS   = @GSL_LIBS@
# Do not put GCC specific flags here. Put them instead in CFLAGS and
# CXXFLAGS in ~/.R/Makevars
LTO = $(LTO_OPT)
DEBUG=0
PKG_CPPFLAGS = $(GSL_CFLAGS) -DR_PACKAGE -DDEBUG=$(DEBUG) -I./libmoocore/ $(LTO)
PKG_LIBS = $(GSL_LIBS)
MOOCORE_SRC_FILES = hv_contrib.c hv.c pareto.c whv.c whv_hype.c avl.c eaf3d.c eaf.c io.c
SOURCES = $(MOOCORE_SRC_FILES:%=libmoocore/%) init.c  Rmoocore.c
OBJECTS = $(SOURCES:.c=.o)

export GSL_CFLAGS GSL_LIBS

.PHONY: all clean exes

all: exes $(SHLIB)

$(SHLIB): $(OBJECTS)

exes:
	$(MAKE) -C libmoocore all march=none CC="$(CC)" CFLAGS="$(CFLAGS) $(LTO)" OPT_CFLAGS="" WARN_CFLAGS="" DEBUG=$(DEBUG) EXE=$(EXEEXT) BINDIR=./
	@-$(RM) libmoocore/*.o

clean:
	@-$(RM) *.o *.so *.dll
	$(MAKE) -C libmoocore clean EXE=$(EXEEXT) BINDIR=./
